{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "types": ["reflect-metadata"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts"]
}
